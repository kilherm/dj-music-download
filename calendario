                    { title: 'Quinta rotineira da entorna!', start: '2024-11-07' },
                    { title: 'Quinta rotineira da entorna!', start: '2024-12-05' },

                    // Domingão da entorna
                    { title: 'Domingão da entorna!', start: '2024-08-18' },
                    { title: 'Domingão da entorna!', start: '2024-09-15' },
                    { title: 'Domingão da entorna!', start: '2024-10-20' },
                    { title: 'Domingão da entorna!', start: '2024-11-17' },
                    { title: 'Domingão da entorna!', start: '2024-12-15' },

                    // Batatais Car Show
                    { title: 'Batatais Car Show', start: '2024-09-14' },
                    { title: 'Batatais Car Show', start: '2024-09-15' }
                ],
                headerToolbar: {
                    left: 'prev,next today',
